<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.tonini.diego.musicat.Main2Activity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/ColorPrimary"
        app:layout_scrollFlags="scroll|enterAlways"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        android:elevation="0dp">
    </android.support.v7.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar"
        android:id="@+id/scrollView">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imgCover"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/avicii_art"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/ColorPrimary"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:text="Title"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/editTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="casual title"/>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:text="Title"
                    android:textSize="20sp"/>

                <EditText
                    android:id="@+id/editArtist"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="casual artist"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:text="Album"
                    android:textSize="20sp"/>

                <EditText
                    android:id="@+id/editAlbum"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="casual album"/>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <com.melnykov.fab.FloatingActionButton
        xmlns:fab="http://schemas.android.com/apk/res-auto"
        android:id="@+id/fabEditConfirm"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@mipmap/ic_action_mark"
        android:scaleType="centerInside"
        fab:fab_colorNormal="@color/ColorPrimary"
        fab:fab_colorPressed="@color/ColorPrimaryDark"
        fab:fab_colorRipple="@color/ColorSecondary"
        android:layout_gravity="right"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_margin="16dp"/>


</RelativeLayout>
