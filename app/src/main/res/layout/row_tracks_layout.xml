<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="64dp"
    android:paddingRight="15dp">

    <ImageView
        android:id="@+id/imageViewRowCover"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:maxWidth="64dp"
        android:maxHeight="64dp"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:src="@mipmap/unknow_cover"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/imageViewRowCover"
        android:layout_toEndOf="@+id/imageViewRowCover"
        android:layout_alignBottom="@+id/imageViewRowCover"
        android:gravity="center_vertical"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp"
        android:layout_toStartOf="@+id/linearLeft"
        android:layout_toLeftOf="@+id/linearLeft">

        <TextView
            android:id="@+id/tvRowTitle"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:textColor="@color/primary_dark_material_dark"
            android:textSize="14sp"
            android:layout_gravity="center_vertical"
            android:gravity="bottom"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="0"
            android:singleLine="true"
            android:text="title"/>


        <TextView
            android:id="@+id/tvRowSubtitle"
            android:layout_width="match_parent"
            android:layout_height="26dp"
            android:textColor="@color/primary_dark_material_light"
            android:textSize="10sp"
            android:text="artist"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="0"
            android:singleLine="true" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLeft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_alignParentTop="true">

        <ImageButton
            android:id="@+id/imageViewOver"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@null"
            />
    </LinearLayout>

</RelativeLayout>